// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model MenuItem {
    id          String  @id @default(cuid())
    order       Int
    name        String
    description String?
    price       Float
    category    String
}

model Location {
    id            String @id @default(cuid())
    address       String
    googleMapsUrl String
}
